package services;

import java.security.InvalidParameterException;

public interface InterestService {
	double getInterestRate();
	double payment(double amount, int mounsths);
	
	
	default double payment(double amount, int mounths) {
		if(mounths< 1) {
			throw new InvalidParameterException("Mounths must be greater than zero");
		}
		return amount * Math.pow(1.0 + interestRate/100.0, mounths);
	}
	
}
